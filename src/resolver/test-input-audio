target audio_route
    depends on $audio_device_selectable $audio_output_configuration \
               $resource_owner
    update script
        update_audio_routing()
    end script

target audio_volume
    depends on $resource_owner $resource_set
    update script
        update_audio_volume()
    end script

target audio_cork
    depends on $resource_owner
    update script
        cork_audio_stream('telephony')
    end script

target audio_mute
    depends on $mute
    update script
        mute_audio_input_devices()
    end script
